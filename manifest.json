{
  "manifest_version": 3,
  "name": "AI Anti-Leak",
  "version": "0.1",
  "description": "Marre de faire fuiter des secrets sur ChatGPT ??",
  "permissions": ["scripting", "tabs"],
  "action": {
    "default_popup": "src/01-Presentation/Popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/bundle.js"]
    }
  ]
}
